# 评论系统全局控制
# 支持同时启用多个评论系统，用户可以在前端切换
# 加载顺序：localStorage（用户手动选择）-> default（默认系统）
#          -> valine -> waline -> twikoo -> gitalk -> giscus -> disqus
comment:
  # 评论框标题（多语言配置）
  title:
    en: Leave a comment
    zh-CN: 说些什么吧！
    zh-TW: 說些什麼吧！
    ja: コメントを残す
    pt-BR: Deixe um comentário
  default: waline  # 默认评论系统（当启用多个评论系统时）

# Valine 评论系统配置
# 官网：https://valine.js.org
# 版本：1.5.1
# 注意：notify 和 verify 已被弃用
valine:
  enable: false         # 是否启用 Valine（设置为 true 以启用）
  appId:                # LeanCloud 应用的 App ID
  appKey:               # LeanCloud 应用的 App Key
  pageSize: 10          # 评论列表每页显示数量
  avatar: mp            # Gravatar 头像样式，参见 https://valine.js.org/#/avatar
  # lang: zh-cn         # 已弃用，请使用 hugo.toml 中的 languageCode
  placeholder: Just go go  # 评论框占位符文字
  guest_info: nick,mail,link  # 评论者信息字段（昵称、邮箱、网址）
  recordIP: true        # 是否记录评论者的 IP 地址
  highlight: true       # 是否高亮代码块
  visitor: false        # 是否显示访客数量
  serverURLs:           # LeanCloud 服务器地址（可选）

# Waline 评论系统配置
# 官网：https://waline.js.org/
waline:
  enable: false         # 是否启用 Waline
  serverURL:            # Waline 服务器地址（必填）
  # lang: zh-CN         # 已弃用，请使用 hugo.toml 中的 languageCode
  locale: {}            # 自定义语言，参见 https://waline.js.org/guide/features/i18n.html
  emoji:                # 表情包配置
    - https://unpkg.com/@waline/emojis@1.2.0/weibo      # 微博表情
    - https://unpkg.com/@waline/emojis@1.2.0/alus       # 阿鲁斯表情
    - https://unpkg.com/@waline/emojis@1.2.0/bilibili   # B站表情
    - https://unpkg.com/@waline/emojis@1.2.0/qq         # QQ表情
    - https://unpkg.com/@waline/emojis@1.2.0/tieba      # 贴吧表情
    - https://unpkg.com/@waline/emojis@1.2.0/tw-emoji   # Twitter表情
  meta:                 # 评论者信息字段
    - nick              # 昵称
    - mail              # 邮箱
    - link              # 网址
  requiredMeta:         # 必填字段
    - nick
    - mail
  wordLimit: 0          # 评论字数限制（0 表示不限制）
  pageSize: 10          # 每页评论数
  pageview: true        # 是否启用文章阅读量统计

# Twikoo 评论系统配置
# 官网：https://twikoo.js.org
twikoo:
  enable: false         # 是否启用 Twikoo
  envId:                # 腾讯云环境填 envId；Vercel 环境填地址（https://xxx.vercel.app）
  region:               # 腾讯云区域（可选）

# Gitalk 评论系统配置
# 官网：https://github.com/gitalk/gitalk
gitalk:
  enable: false         # 是否启用 Gitalk
  clientID:             # GitHub Application Client ID
  clientSecret:         # GitHub Application Client Secret
  repo:                 # 存储评论的 GitHub 仓库名
  owner:                # GitHub 仓库所有者
  admin:                # GitHub 仓库所有者和协作者（数组）
  md5: false            # 是否使用 MD5 加密路径

# Giscus 评论系统配置
# 官网：https://giscus.app/zh-CN
giscus:
  enable: false         # 是否启用 Giscus
  repo:                 # GitHub 仓库（格式：用户名/仓库名）
  repoId:               # 仓库 ID
  category:             # Discussion 分类名
  categoryId:           # 分类 ID
  mapping: mapping      # 页面与 Discussion 的映射关系
  strict: 0             # 严格匹配模式
  reactionsEnabled: 1   # 启用反应
  emitMetadata: 0       # 发送元数据
  inputPosition: bottom # 评论输入框位置（top/bottom）
  # commentTheme: preferred_color_scheme # 无效配置
  # lang: zh-CN         # 已弃用，请使用 hugo.toml 中的 languageCode

# Disqus 评论系统配置
# 官网：https://disqus.com
disqus:
  enable: false         # 是否启用 Disqus
  shortname:            # 您的 Disqus shortname
  count: true           # 是否启用评论数量统计

