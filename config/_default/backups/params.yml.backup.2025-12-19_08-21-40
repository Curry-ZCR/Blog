baidu_analytics: false

# Google Analytics（填入您的 Google Analytics ID）
google_analytics: false

# Microsoft Clarity（填入您的 Clarity ID）
clarity: false

########################################
# Markdown 显示配置
########################################

# Mermaid 流程图配置
# 文档：https://github.com/mermaid-js/mermaid
mermaid:
  zoom: false           # 是否为 Mermaid 图表启用缩放功能

# 代码块配置
code_block:
  # 代码块默认展开状态
  # true: 默认展开所有代码块
  # false: 默认折叠所有代码块
  # 数字: 当代码行数超过指定值时默认折叠
  expand: true

# 数学公式渲染配置
# 注意：不要同时启用 KaTeX 和 MathJax3
# 需要在文章的 Front-matter 中添加 math: true 才会加载数学公式库
math:
  # KaTeX 配置（推荐，渲染速度快）
  # 文档：https://github.com/KaTeX/KaTeX
  katex:
    enable: true        # 是否启用 KaTeX
  
  # MathJax3 配置（功能更强大，但加载较慢）
  # 文档：https://docs.mathjax.org/en/latest/web/configuration.html
  mathjax:
    enable: false       # 是否启用 MathJax3
    options:            # MathJax 配置选项
    # 注意：由于 Hugo 会自动将对象的 key 转为小写，所以配置需要放在数组中
      [
        {
          tex:
            {
              tags: "ams",
              useLabelIds: true,
              inlineMath: [["$", "$"], ['\\(', '\\)']],      # 行内公式分隔符
              displayMath: [["$$", "$$"], ['\\[', '\\]']],  # 块级公式分隔符
              processEscapes: true,
              processEnvironments: true,
              autoload: { color: [], colorv2: ["color"] },
              packages: { "[+]": ["noerrors"] },
            },
          options:
            {
              skipHtmlTags:
                ["script", "noscript", "style", "textarea", "pre", "code"],
              ignoreHtmlClass: "tex2jax_ignore",
              processHtmlClass: "tex2jax_process",
            },
          loader: { load: ["input/asciimath", "[tex]/noerrors"] },
        },
      ]

