  apiKey:               # Algolia Search-Only API Key（注意：不要使用 Admin Key！）
  indexName:            # Algolia 索引名称
  hits:
    per_page: 10        # 每页显示的搜索结果数量

########################################
# 动画效果配置
########################################

# 页面预加载动画
preloader:
  enable: true          # 是否启用预加载动画
  text:                 # 加载提示文字（多语言）
    zh-CN: 少女祈祷中...
    zh-TW: 少女祈禱中...
    en: Loading...
    ja: 少女祈祷中...
    pt-BR: Carregando...
  icon:                 # 加载图标（默认使用内联 SVG，也可使用图片 URL，如 '/images/taichi.png'）
  rotate: true          # 图标是否旋转

# 页面元素动画配置
# 基于 AOS.js，文档：https://github.com/D-Sketon/aos.js
animation:
  enable: true          # 是否启用页面动画
  options:              # 各个页面区域的动画效果配置
    header:             # 页面头部
      title: slide-up       # 标题动画：从下向上滑入
      subTitle: slide-down  # 副标题动画：从上向下滑入
    home:               # 首页
      post: fade-up         # 文章卡片：淡入并上移
      widget: fade-up       # 小部件：淡入并上移
      sidebar: fade-up      # 侧边栏：淡入并上移
    article:            # 文章页面
      whole: fade-up        # 整体：淡入并上移
      date: zoom-in         # 日期：缩放入
      category: zoom-in     # 分类：缩放入
      tag: zoom-in          # 标签：缩放入
      comment: zoom-in      # 评论：缩放入
      reading: zoom-in      # 阅读信息：缩放入
      nav: fade-up          # 导航：淡入并上移
    archive:            # 归档页面
      whole: fade-up        # 整体：淡入并上移
      tag: zoom-in          # 标签：缩放入
      category: zoom-in     # 分类：缩放入
      section: fade-up      # 分组：淡入并上移
      nav: fade-up          # 导航：淡入并上移

# 鼠标烟花特效
# 文档：https://github.com/D-Sketon/mouse-firework
firework:
  enable: true          # 是否启用鼠标点击烟花特效
  disable_on_mobile: false  # 是否在移动设备上禁用
  options:              # 点击特效配置
    excludeElements: ["a", "button"]  # 排除的 HTML 元素（点击这些元素不会触发特效）
    particles:          # 粒子效果配置
      - shape: circle       # 第一组粒子：圆形
        move: ["emit"]      # 移动方式：发射
        easing: easeOutExpo # 缓动函数
        colors: ["var(--red-1)", "var(--red-2)", "var(--red-3)", "var(--red-4)"]  # 颜色
        number: 20          # 粒子数量
        duration: [1200, 1800]  # 持续时间范围（毫秒）
        shapeOptions:       # 形状选项
          radius: [16, 32]      # 半径范围
          alpha: [0.3, 0.5]     # 透明度范围
      - shape: circle       # 第二组粒子：圆形
        move: ["diffuse"]   # 移动方式：扩散
        easing: easeOutExpo
        colors: ["var(--red-0)"]
        number: 1
        duration: [1200, 1800]
        shapeOptions:
          radius: 20
          alpha: [0.2, 0.5]
          lineWidth: 6

