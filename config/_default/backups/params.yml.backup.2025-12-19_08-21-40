# CSS 样式配置
########################################

# 标题锚点图标
# 默认使用 '#' 图标，可以使用 FontAwesome 或 icon_font 的十六进制代码（如 'f0c1'）
# 设置为 false 可隐藏锚点图标
anchor_icon:

# 灵梦鼠标指针样式配置
reimu_cursor:
  enable: true          # 是否启用自定义鼠标指针
  cursor:
    default: ../images/cursor/reimu-cursor-default.png  # 默认鼠标指针（路径相对于 css/main.css）
    pointer: ../images/cursor/reimu-cursor-pointer.png  # 悬停在链接上的鼠标指针
    text: ../images/cursor/reimu-cursor-text.png        # 文本选择时的鼠标指针

# 图标字体配置
# 默认使用项目提供的 iconfont，如果设置为 false 则使用 vendor.yml 中配置的 FontAwesome
icon_font: 4552607_4k4bc36ef96

# 字体加载策略
# 加载优先级：自定义字体 -> Google Fonts -> 本地备用字体

# 自定义字体配置
custom_font:
  enable: false         # 是否启用自定义字体
  article:              # 文章正文字体
    # - css: https://fontsapi.zeoseven.com/292/main/result.css # 字体 CSS 文件地址
    #   name: LXGW WenKai # 字体名称（如：霞鹜文楷）
  code:                 # 代码块字体

# Google Fonts 配置
# 访问 https://fonts.google.com/ 选择字体
# 优先级高于本地备用字体
font:
  enable: true          # 是否启用 Google Fonts
  article:              # 文章正文字体列表
    - Mulish            # 英文字体
    - Noto Serif SC     # 中文字体（思源宋体）
  code:                 # 代码块字体列表（可选）
    # - Ubuntu Mono
    # - Source Code Pro
    # - JetBrains Mono

# 本地备用字体配置
# 当自定义字体和 Google Fonts 加载失败时使用
local_font:
  article:              # 文章正文备用字体
    - "-apple-system"   # Apple 系统字体
    - PingFang SC       # 苹方（macOS/iOS）
    - Microsoft YaHei   # 微软雅黑（Windows）
    - sans-serif        # 系统默认无衬线字体
  code:                 # 代码块备用字体
    - Menlo             # macOS 等宽字体
    - Monaco            # macOS 等宽字体
    - Consolas          # Windows 等宽字体
    - monospace         # 系统默认等宽字体

# 暗黑模式配置
dark_mode:
  # true: 默认启用暗黑模式
  # false: 默认禁用暗黑模式
  # auto: 根据系统设置自动切换暗黑模式
  enable: auto # true | false | auto

