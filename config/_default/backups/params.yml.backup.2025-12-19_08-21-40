# 音乐播放器配置
# 实验性功能
# 注意：请开启 PJAX 以使用此功能
player:
  disable_on_mobile: false  # 是否在移动设备上禁用
  position: before_sidebar  # 播放器位置：before_sidebar | after_sidebar | after_widget
  
  # APlayer 音乐播放器
  # 注意：如果要使用 Meting，必须先启用 APlayer
  aplayer:
    # 文档：https://github.com/DIYgod/APlayer
    enable: false       # 是否启用 APlayer
    options:            # APlayer 配置选项
      audio: []             # 音频列表
      fixed: true           # 是否固定在底部
      autoplay:             # 是否自动播放
      loop:                 # 循环模式
      order:                # 播放顺序
      preload:              # 预加载模式
      volume:               # 音量
      mutex:                # 互斥模式（阻止多个播放器同时播放）
      listFolded:           # 播放列表是否默认折叠
      lrcType:              # 歌词类型
  
  # Meting 音乐平台接口
  # 注意：如果要使用 Meting，请先启用 APlayer
  meting:
    # 文档：https://github.com/metowolf/MetingJS
    enable: false       # 是否启用 Meting
    meting_api:         # 自定义 Meting API 地址
    options:            # Meting 配置选项
      id: 2265921590        # 歌单/歌曲 ID
      server: netease       # 音乐平台：netease（网易云）、tencent（QQ音乐）等
      type: playlist        # 类型：song（单曲）、playlist（歌单）、album（专辑）
      auto:                 # 自动解析

